{
  "manifest_version": 2,
  "version": "0.0.1",
  "short_name": "IFS",
  "name": "India Free Stuff",
  "description": "IFS Description.",
  "browser_action": {
    "default_title": "IFS",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.bundle.js"]
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "<all_urls>"],
      "js": ["contentScript.bundle.js"]
    }
  ],
  "icons": {
    "128": "icon-128.png"
  },
  "permissions": ["activeTab", "storage", "tabs", "http://*/*", "https://*/*"],
  "web_accessible_resources": [
    "content.styles.css",
    "icon-128.png",
    "icon-34.png"
  ]
}
